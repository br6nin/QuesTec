generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(cuid())
  email             String   @unique
  name              String?
  password          String?
  credits           Int      @default(0)
  plan              String   @default("free")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  essays            Essay[]
  payments          Payment[]
}

model Essay {
  id          String   @id @default(cuid())
  userId      String
  title       String
  content     String
  theme       String
  finalScore  Int?
  c1Score     Int?
  c2Score     Int?
  c3Score     Int?
  c4Score     Int?
  c5Score     Int?
  feedback    String?
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Payment {
  id            String   @id @default(cuid())
  userId        String
  amount        Float
  credits       Int
  paymentMethod String
  status        String   @default("pending")
  pixKey        String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}